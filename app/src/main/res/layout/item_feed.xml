<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/video_cover"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="6dp"
        app:actualImageScaleType="centerCrop"
        app:overlayImage="@drawable/bg_round_rect"
        app:roundedCornerRadius="8dp" />

    <TextView
        android:id="@+id/video_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#C0C0C0"
        android:maxLines="1"
        tools:text="FROM: WRR"
        android:layout_toRightOf="@id/video_cover"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/video_createTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#C0C0C0"
        tools:text="FROM: WRR"
        android:layout_toRightOf="@id/video_cover"
        android:layout_below="@id/video_userName"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/video_updateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#C0C0C0"
        tools:text="FROM: WRR"
        android:layout_toRightOf="@id/video_cover"
        android:layout_below="@id/video_createTime"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>